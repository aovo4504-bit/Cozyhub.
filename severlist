Main.Active = true
Main.Draggable = true
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 22)

-- Scale Animation
local UIScale = Instance.new("UIScale", Main)
UIScale.Scale = 0.2
game:GetService("TweenService"):Create(UIScale, TweenInfo.new(0.25, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Scale = 1}):Play()

