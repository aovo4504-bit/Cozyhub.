---------------------------------------------------------------------
-- FUNCTION: FAKE SERVERS
---------------------------------------------------------------------
local function CreateFakeServers()
	List:ClearAllChildren()

	local layout = Instance.new("UIListLayout", List)
	layout.Padding = UDim.new(0, 10)

	for i = 1, 12 do
		local brainrot = BrainrotList[math.random(1, #BrainrotList)]
		local ms = math.random(10, 60)
		local players = math.random(1, 8)

		local item = Instance.new("Frame", List)
		item.Size = UDim2.new(1, -10, 0, 85)
		item.BackgroundColor3 = Color3.fromRGB(20, 27, 33)
		Instance.new("UICorner", item).CornerRadius = UDim.new(0, 15)

		local label = Instance.new("TextLabel", item)
		label.Size = UDim2.new(0.7, 0, 1, 0)
		label.BackgroundTransparency = 1
		label.Text = brainrot .. "\nPlayers: " .. players .. "/8    |   m/s: " .. ms
		label.Font = Enum.Font.GothamBold
		label.TextSize = 26
		label.TextColor3 = Color3.fromRGB(0, 255, 255)
		label.TextXAlignment = Enum.TextXAlignment.Left
		label.Position = UDim2.new(0.05, 0, 0, 0)

		local join = Instance.new("TextButton", item)
		join.Size = UDim2.new(0.25, 0, 0.75, 0)
		join.Position = UDim2.new(0.72, 0, 0.12, 0)
		join.Text = "JOIN"
		join.Font = Enum.Font.GothamBold
		join.TextSize = 26
		join.BackgroundColor3 = Color3.fromRGB(0, 180, 255)
		Instance.new("UICorner", join).CornerRadius = UDim.new(0, 12)

		join.MouseButton1Click:Connect(function()
			TeleportService:Teleport(PLACE_ID)
		end)
	end

	List.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y)
end

CreateFakeServers()
Refresh.MouseButton1Click:Connect(CreateFakeServers)

---------------------------------------------------------------------
-- AUTO JOIN
---------------------------------------------------------------------
local Auto = false

AutoJoin.MouseButton1Click:Connect(function()
	Auto = not Auto

	if Auto then
		AutoJoin.Text = "AUTO JOIN: ON"
	else
		AutoJoin.Text = "AUTO JOIN"
		return
	end

	while Auto do
		wait(1)
		TeleportService:Teleport(PLACE_ID)
	end
end)
